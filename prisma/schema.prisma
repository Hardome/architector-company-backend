generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  area        Int
  rooms       Int
  status      ProjectStatus @default(ACTIVE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  images      Image[]
}

model Image {
  id        String   @id @default(cuid())
  url       String
  filename  String
  size      Int
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

enum UserRole {
  USER
  ADMIN
}

enum ProjectStatus {
  ACTIVE
  RESERVED
  SOLD
}